


@model CategoryListViewModel

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_CustomerPanelLayout.cshtml";
}

<h2>Kategoriler</h2>

<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-3">
            <div class="category-item">
                <a href="/CustomerPanel/ProductList/@category.CategoryID">
                    <img src="@category.Imgurl" alt="@category.CategoryName" style="width: 250px; height: 250px; max-width: 100%; max-height: 100%;" class="img-responsive" />
                <h3>@category.CategoryName</h3>
            </div>
        </div>
    }
</div>
