@using Entity.dto
@model LoginDto
<div class="login-form login-form-left">
	<div class="agile-row">
		<h3>Müşteri Girişi</h3>
		<span class="fa fa-lock"></span>
		<div class="clear"></div>
		<div class="login-agileits-top">
			<form method="post" action="@Url.Action("Login", "User")">
				<input type="email" class="email" name="Email" Placeholder="Mailiniz" required="" />
				<input type="password" class="password" name="Password" Placeholder="Şifreniz" required="" />
				<tr>
					<td><label asp-for="Persistent"></label></td>
					<td><input asp-for="Persistent" /></td>
					<td><span asp-validation-for="Persistent"></span></td>
				</tr>
				
				<input type="submit" value="Login">
			</form>
		</div>
		<div class="login-agileits-bottom">
			<h6><a href="@Url.Action("PasswordReset","User")">Şifremi Unuttum?</a></h6>
		</div>
	</div>
</div>


