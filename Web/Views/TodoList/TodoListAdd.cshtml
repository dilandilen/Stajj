@model TodoList
@{
    ViewData["Title"] = "TodoListAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Yapılacaklar  / Yeni Not  </li>
</ol>
<br />

@using (Html.BeginForm("TodoListAdd", "TodoList", FormMethod.Post))
{
    <br />
    <table class="table table-borderless">
        <thead>
            <tr>
                <th scope="col">
                    @Html.Label("Görevi Yaz  ")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </th>
                <th scope="col">
                    @Html.Label("Hangi Güne Kadar  ")
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </th>
                <th scope="col">
                    @Html.Label("Saat kaça kadar? ")
                    @Html.DropDownListFor(x => x.Hour, new SelectList(new List<string> { "1.00", "2.00", "3.00", "4.00","5.00", "6.00", "7.00", "8.00","9.00", "10.00", "11.00", "12.00","13.00", "14.00", "15.00", "16.00","17.00", "18.00", "19.00", "20.00" }), new { @class = "form-control" })
                </th>
                <th scope="col"> <button class="btn btn-success">Ekle</button> </th>
                <th scope="col"><a href="/Todo/Index" class="btn btn-outline-primary"> Listeye Dön </a></th>
            </tr>
        </thead>
    </table>
}
