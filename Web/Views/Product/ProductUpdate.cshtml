@model ProductModel

@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3">Ürün Güncelle</h1> <hr> <form asp-controller="Product" asp-action="ProductUpdate" method="POST" enctype="multipart/form-data"> <div class="row"> <div class="col-md-12"> <div asp-validation-summary="All" class="text-danger"></div> </div> </div> <div class="row"> <div class="col-md-8">

        <input type="hidden" name="ProductId" value="@Model.ProductId">
        <div class="form-group row">
            <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="ProductName">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group row">
                <label asp-for="Brandname" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Brandname">
                    <span asp-validation-for="Brandname" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group row">
            <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Stock">
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Cost_price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Cost_price">
                <span asp-validation-for="Cost_price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Selling_price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Selling_price">
                <span asp-validation-for="Selling_price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="State" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="State">
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
        <label asp-for="ProductImage" class="control-label"></label>
        <input type="file" asp-for="ProductImage" class="form-control" />
    </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Save Product</button>
            </div>
        </div>

    </div>
    <div class="col-md-4">

        @for (int i = 0; i < Model.SelectedCategories.Count; i++)
        {
            <input type="hidden" name="SelectedCategories[@i].CategoryID" value="@Model.SelectedCategories[@i].CategoryID">
            <input type="hidden" name="SelectedCategories[@i].CategoryName" value="@Model.SelectedCategories[@i].CategoryName">
        }

        @foreach (var item in (List<Entity.Category>)ViewBag.Categories)
        {
            <div class="custom-control custom-checkbox">
                <input type="checkbox"
                       class="custom-control-input"
                       name="categoryIds"
                       value="@item.CategoryID"
                       id="category_@(item.CategoryID)"
                       @(Model.SelectedCategories.Any(i => i.CategoryID == item.CategoryID) ? "checked" : "")>
                <label class="custom-control-label" for="category_@(item.CategoryID)">@item.CategoryName</label>
            </div>
        }
    </div>
</div>
</form>