@model Personel
@{
    ViewData["Title"] = "PersonelDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>PersonelDelete</h1


<h2>Personel Sil</h2>

<div>
    <p><strong>Müşteri Adı:</strong> @Model.Name @Model.SurName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Telefon:</strong> @Model.Phone</p>
    <p><strong>Adres:</strong> @Model.Role</p>
</div>

<p>Personeli silmek istediğinizden emin misiniz?</p>

@using (Html.BeginForm("PersonelDelete", "Personel", FormMethod.Post))
{
    @Html.HiddenFor(x => x.PersonelId)
   
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index", "Personel")" class="btn btn-secondary">İptal</a>
}



