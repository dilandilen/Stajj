@model PersonelSalesModel
@{
    ViewData["Title"] = "PersonelSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        <a href="/Personel/Index">Personel</a> / @ViewBag.VPersonel
    </li>
</ol>

<table class="table table-hover m-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ürün</th>
            <th scope="col">Müşteri</th>
            <th scope="col">Birim Fiyat</th>
            <th scope="col">Adet</th>
            <th scope="col">Toplam Fiyat</th>
            <th scope="col">Tarih</th>
            <th scope="col">Yazdır</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var saleTransaction in Model.SaleTransactions)
        {
            <tr>
                <td>@saleTransaction.SalesId</td>
                <td>@saleTransaction.Product.ProductName</td>
                <td>@saleTransaction.Customer.Name <span>&nbsp;</span> @saleTransaction.Customer.SurName</td>
                <td>@saleTransaction.Price</td>
                <td>@saleTransaction.Quantity</td>
                <td>@saleTransaction.TotalAmount</td>
                <td>@saleTransaction.Date.ToShortDateString()</td>
                <td><a href="#">Yazdır</a></td>
            </tr>
        }
    </tbody>
</table>
