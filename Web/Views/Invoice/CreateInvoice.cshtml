@model Invoice
@{
    ViewData["Title"] = "CreateInvoice";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Yeni Fatura Ekle     </li>
</ol>

@using (Html.BeginForm("CreateInvoice", "Invoice", FormMethod.Post))
{
    <br />
    <table class="table table-borderless">
        <thead>
            <tr>
                <th scope="col"><a href="/Product/Index" class="btn btn-outline-primary"> Listeye Dön </a></th>
            </tr>
            <tr>
                <th scope="col">
                    @Html.HiddenFor(x => x.InvoiceId, new { @class = "form-control" })

                    @Html.Label("Seri NO")
                    @Html.TextBoxFor(x => x.InvoiceSerialNo, new { @class = "form-control" })
                </th>
                <th scope="col">
                    @Html.Label("Sıra No")
                    @Html.TextBoxFor(x => x.InvoiceOrderNo, new { @class = "form-control" })
                </th>



            </tr>

            <tr>

                <th scope="col">
                    @Html.Label("Teslim Eden")
                    @Html.TextBoxFor(x => x.Delivered, new { @class = "form-control" })
                </th>
                <th scope="col">
                    @Html.Label("Teslim Alan")
                    @Html.TextBoxFor(x => x.Received, new { @class = "form-control" })
                </th>

            </tr>

            <tr>

                <th scope="col">
                    @Html.Label("Vergi Dairesi")
                    @Html.TextBoxFor(x => x.TaxAdministration, new { @class = "form-control" })
                </th>
               

            </tr>



            <tr>
                <th scope="col">
                    @Html.Label("Toplam")
                    @Html.TextBoxFor(x => x.Sum, new { @class = "form-control" })
                </th>
                <th scope="col"> <button class="btn btn-success">Kaydet</button> </th>
            </tr>

        </thead>
    </table>



}

