@model InvoiceListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Fatura Listesi  </li>
</ol>



<table id="TBL" class="table table-hover m-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Seri NO </th>
            <th scope="col">Sıra NO</th>
            <th scope="col">Vergi NO</th>
            <th scope="col">Teslim Eden </th>
            <th scope="col">Teslim Alan </th>
            <th scope="col">Toplam</th>
            <th scope="col">Tarih</th>
            <th scope="col">Saat</th>

            <th scope="col">Detay  </th>
            <th scope="col">Yeni Kalem </th>
            <th scope="col">Pop up </th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoices)
        {
            <tr>
                <th scope="row">@item.InvoiceId</th>
                <td>@item.InvoiceSerialNo</td>
                <td>@item.InvoiceOrderNo</td>
                <td>@item.TaxAdministration</td>
                <td>@item.Received</td>
                <td>@item.Delivered</td>
                <td>@item.Sum ₺</td>
                <td>@item.Date</td>
                <td>@item.Clock</td>
                <td> <a href="/Invoice/InvoicePenDetail/@item.InvoiceId" class="btn btn-dark"> Detay </a> </td>


                <td> <a href="/Invoice/InvoiceUpdate/@item.InvoiceId" class="btn btn-success"> Yeni Kalem </a> </td>
                <td> <a href="/Invoice/InvoicePenDetail/@item.InvoiceId" class="btn btn-outline-primary"> Popup </a> </td>


            </tr>
        }

      
</table>
<br />
<a href="/Invoice/CreateInvoice/" class="btn btn-primary p-2 m-3">Fatura Ekle </a>
<br />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#TBL').dataTable({});
</script>


